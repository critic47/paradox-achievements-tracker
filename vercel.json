{
  "rewrites": [
    {
      "source": "/steam-api/(.*)",
      "destination": "https://api.steampowered.com/$1"
    }
  ],
  "headers": [
    {
      "source": "/steam-api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ]
}
